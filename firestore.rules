rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is signed in and is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Settings are public to read for all users, but write is disallowed
    match /settings/global {
      allow read: if true;
      allow write: if false; 
    }

    // Users collection:
    // - Anyone can create a user document (for sign-up)
    // - Only the owner can read or update their own document
    match /users/{userId} {
      allow create: if true;
      allow read, update: if isOwner(userId);
      allow delete: if false; // Generally, don't allow clients to delete users
    }

    // Stakes collection:
    // - Users can create stakes for themselves
    // - Users can only read stakes that belong to them
    match /stakes/{stakeId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId);
      allow update, delete: if false; // Logic handled by backend/transactions
    }

    // Transactions collection:
    // - Users can create transactions for themselves
    // - Users can only read transactions that belong to them
    match /transactions/{txId} {
       allow create: if isOwner(request.resource.data.userId);
       allow read: if isOwner(resource.data.userId);
       allow update, delete: if false;
    }
    
    // Payouts (Commissions) collection:
    // - Users can only read payouts directed to them
    match /payouts/{payoutId} {
      allow read: if isOwner(resource.data.toUserId);
      allow create, update, delete: if false; // Created by backend logic
    }
    
    // Affiliate Network sub-collection:
    // - A user can read the members list of their own network
    match /affiliateNetworks/{userId}/members/{memberId} {
       allow read: if isOwner(userId);
       allow write: if false;
    }
    
    // Trading Sessions:
    // - Sessions are public to read
    // - Bets subcollection can be written to by the user, and read by the user
    match /tradingSessions/{sessionId} {
      allow read: if true;
      allow write: if false; // Only backend can manage sessions

      match /bets/{userId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
